@page
    <div class="container">
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-2">StoreID</div>
            <div class="col-4"><p id="storeId" /></div>
        </div>
        <div class="row">
            <div class="col-2">RegisterID</div>
            <div class="col-4"><input type="text" id="registerInput" /></div>
        </div>
        <div class="row">
            <div class="col-2">CheckoutTotal</div>
            <div class="col-4"><input type="number" min="0.01" step="0.01" max="2500" id="totalInput" /></div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-6">
                <input type="button" id="testButton" value="Send Test Transaction" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <ul id="txnList"></ul>
        </div>
    </div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
